import pandas as pd
import matplotlib.pyplot as plt
import os

# ğŸ”¹ Check if running in Google Colab (for file upload support)
try:
    from google.colab import files
    colab_env = True
except ImportError:
    colab_env = False

# ğŸ”¹ Define the file path
file_path = '/mnt/data/API_SP.POP.TOTL_DS2_en_csv_v2_900.csv'

# ğŸ”¹ Check if file exists; if not, prompt user to upload
if not os.path.exists(file_path):
    print("âš ï¸ File not found. Please upload the CSV file.")
    if colab_env:
        uploaded = files.upload()  # Opens file upload dialog in Google Colab
        file_path = list(uploaded.keys())[0]  # Get uploaded file name
    else:
        raise FileNotFoundError("CSV file is missing. Please check the file path.")

# ğŸ”¹ Load the dataset
data = pd.read_csv(file_path, skiprows=4)

# ğŸ”¹ Select the year for analysis (e.g., 2022)
year = '2022'

# ğŸ”¹ Check if the selected year column exists
if year not in data.columns:
    raise ValueError(f"âš ï¸ Year {year} not found in dataset. Check available columns: {data.columns}")

# ğŸ”¹ Filter the data for the selected year and drop NaN values
population_data = data[['Country Name', year]].dropna()

# ğŸ”¹ Convert population data to numeric (in case of formatting issues)
population_data[year] = pd.to_numeric(population_data[year], errors='coerce')

# ğŸ”¹ Sort the data by population in descending order and select the top 10 countries
population_top10 = population_data.sort_values(by=year, ascending=False).head(10)

# ğŸ”¹ Plot the bar chart
plt.figure(figsize=(12, 6))
plt.bar(population_top10['Country Name'], population_top10[year], color='skyblue')

# ğŸ”¹ Add titles and labels
plt.title(f'Top 10 Countries by Population in {year}', fontsize=16)
plt.xlabel('Country', fontsize=12)
plt.ylabel('Population', fontsize=12)
plt.xticks(rotation=45, ha='right')

# ğŸ”¹ Display the chart
plt.tight_layout()
plt.show()
